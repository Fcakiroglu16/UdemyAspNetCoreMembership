<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bıdıbıdı.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info mr-1" asp-action="Index" asp-controller="Admin">Admin ana sayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-info mr-1" asp-action="Editor" asp-controller="Member">Editor ana sayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Manager" asp-controller="Member">Manager ana sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>

                <a class="btn btn-danger btn-block" asp-action="AnkaraPage" asp-controller="Member">Ankara sayfa</a>

                <a class="btn btn-danger btn-block" asp-action="ViolencePage" asp-controller="Member">Şiddet içeren sayfa</a>
                <a class="btn btn-danger btn-block" asp-action="ExchangeRedirect" asp-controller="Member">Borsa bilgileri</a>

                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Şifre değiştirme</a>

                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgi güncelleme</a>

                <a class="btn btn-success btn-block" asp-action="TwoFactorAuth" asp-controller="Member">İki adımlı kimlik doğrulama</a>

                <a class="btn btn-info btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış yap</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/qrcode/qrcode.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>