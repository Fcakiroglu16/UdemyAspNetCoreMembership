@model UdemyIdentity.ViewModes.PasswordResetViewModelByAdmin

@{
    ViewData["Title"] = "ResetUserPassword";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>ResetUserPassword</h1>

<h4>PasswordResetViewModelByAdmin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetUserPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserId" class="form-control" />

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
