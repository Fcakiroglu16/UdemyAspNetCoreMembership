@model List<ClaimAssignViewModel>

@{
    ViewData["Title"] = "ClaimAssign";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Kullanıcıya rol atama(@ViewBag.userName)</h3>
<hr />

<form asp-controller="Admin" asp-action="RoleClaimAssign" method="post">

    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input" />
            <label asp-for="@Model[i].ClaimValue" class="form-check-label">@Model[i].ClaimValue</label>

            <input asp-for="@Model[i].ClaimType" type="hidden" />
            <input asp-for="@Model[i].ClaimValue" type="hidden" />
        </div>

    }
    <input class="btn btn-success" type="submit" value="Alt rol ata" />
</form>